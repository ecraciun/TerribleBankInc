@using TerribleBankInc.Models.Enums
@model TerribleBankInc.Models.ViewModels.BankTransactionViewModel

<h4>BankTransactionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTransfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.SourceClientId)
            <div class="form-group">
                <label asp-for="DestinationClientEmail" class="control-label"></label>
                <input asp-for="DestinationClientEmail" class="form-control" />
                <span asp-validation-for="DestinationClientEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAccountNumber" class="control-label"></label>
                <input asp-for="DestinationAccountNumber" class="form-control" />
                <span asp-validation-for="DestinationAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceAccountNumber" class="control-label"></label>
                <select asp-for="SourceAccountNumber" asp-items="@Model.ActiveAccounts" >
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="SourceAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyTypes>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>